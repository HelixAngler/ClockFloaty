<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsUI">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <include layout="@layout/section_title" android:id="@+id/appearanceMenuTitle"/>

        <LinearLayout
            android:id="@+id/appearanceOptionsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/optionChangeBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="@string/pick_background_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:theme="@style/LineColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="@string/adjust_width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderWidgetWidth"
                    android:theme="@style/SliderColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.0"
                    android:valueTo="350.0"
                    android:stepSize="1.0"/>
            </LinearLayout>

            <LinearLayout
                android:theme="@style/LineColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="@string/adjust_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderWidgetHeight"
                    android:theme="@style/SliderColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.0"
                    android:valueTo="350.0"
                    android:stepSize="1.0"/>
            </LinearLayout>

            <LinearLayout
                android:theme="@style/LineColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="@string/adjust_corner_x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderWidgetXCornerRadius"
                    android:theme="@style/SliderColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.0"
                    android:valueTo="100.0"
                    android:stepSize="1.0"/>
            </LinearLayout>

            <LinearLayout
                android:theme="@style/LineColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="@string/adjust_corner_y"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderWidgetYCornerRadius"
                    android:theme="@style/SliderColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.0"
                    android:valueTo="100.0"
                    android:stepSize="1.0"/>
            </LinearLayout>

            <LinearLayout
                android:theme="@style/LineColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout
                android:id="@+id/optionChangeTextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="@string/pick_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:theme="@style/LineColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout
                android:id="@+id/optionChangeTextFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="@string/pick_text_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:theme="@style/LineColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="@string/adjust_time_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderWidgetTimeTextSize"
                    android:theme="@style/SliderColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="8.0"
                    android:valueTo="144.0"
                    android:stepSize="1.0"/>
            </LinearLayout>

            <LinearLayout
                android:theme="@style/LineColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="@string/adjust_date_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderWidgetDateTextSize"
                    android:theme="@style/SliderColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="8.0"
                    android:valueTo="144.0"
                    android:stepSize="1.0"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>