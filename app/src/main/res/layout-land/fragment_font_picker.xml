<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FontPickerFragment">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/pick_the_font_text"
            android:textSize="16sp"
            android:layout_margin="8dp"
            ></TextView>
        <TextView
            android:id="@+id/previewFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sample_text"
            android:textSize="24sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            ></TextView>
        <TextView
            android:id="@+id/previewFontNameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/fontOptionsContainer"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:id="@+id/confirmColorPick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"/>
            <Button
                android:id="@+id/cancelColorPick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</FrameLayout>